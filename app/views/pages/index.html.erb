<%= render 'navbars/home' %>
<header id="page-top">
    <div class="container">
        <div class="intro-text">
            <div class="intro-heading">
            	<div id="container"></div> 
            </div> 
            <%= link_to "Criar uma conta", new_user_registration_path, class: 'btn btn-xl' %>
        </div>
    </div>
</header>

<% if current_user %>
    <%= image_tag current_user.image.url(:small) %>
    <%= current_user.name %>
